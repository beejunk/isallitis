{
  "name": "@isallitis/shared-components",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "healthcheck": "npm run types:check && npm run lint && npm run test && npm run build",
    "build:types": "tsc --project tsconfig.build.json",
    "lint": "eslint",
    "types:check": "pnpm run types:check:web && pnpm run types:check:node",
    "types:check:web": "tsc",
    "types:check:node": "tsc --project test-server/tsconfig.json",
    "start": "nodemon -e js,css,html test-server/start.js"
  },
  "description": "Shared UI components for *Is All It Is* applications.",
  "exports": {
    "./components.js": {
      "import": "./components/components.js",
      "types": "./dist/components.d.ts"
    },
    "./templates.js": {
      "import": "./components/templates.js",
      "types": "./dist/templates.d.ts"
    },
    "./utils.js": {
      "import": "./components/utils.js",
      "types": "./dist/utils.d.ts"
    }
  },
  "devDependencies": {
    "@fastify/static": "^8.2.0",
    "@testing-library/dom": "^10.4.0",
    "chai": "^5.2.0",
    "fastify": "5.4.0",
    "mocha": "^11.7.1",
    "shadow-dom-testing-library": "^1.12.0"
  }
}
